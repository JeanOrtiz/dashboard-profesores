import { __decorate, __spread } from 'tslib';
import { Component, NgModule, ViewChildren, ElementRef } from '@angular/core';
import { FormGroup, FormArray, FormControlName } from '@angular/forms';
import { fromEvent, merge } from 'rxjs';
import { debounceTime } from 'rxjs/operators';

var NgMValidationComponentBase = /** @class */ (function () {
    function NgMValidationComponentBase() {
    }
    NgMValidationComponentBase.prototype.ngOnInit = function () {
    };
    NgMValidationComponentBase = __decorate([
        Component({
            selector: 'mateh-ng-m-validation',
            template: "\n    <p>\n      ng-m-validation works!\n    </p>\n  "
        })
    ], NgMValidationComponentBase);
    return NgMValidationComponentBase;
}());

// import { CrossFieldErrorMatcher } from "./cross-field-error-matcher";
